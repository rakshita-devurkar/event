  <body>
    <nav class="navbar navbar-inverse">
      <div class="container-fluid">
        <div class="navbar-header">
        </div>
        <div>
          <ul class="nav navbar-nav">
            <li class="active"><a href="/">Home</a></li>
            <li><a href="/event">Events</a></li>
            <li><a href="/attendee">Attendee</a></li>
          </ul>
        </div>
      </div>
    </nav>
    <div class="container">
      <h2>New Attendee</h2>
      <form role="form" action="/attendee/create" method="POST">
        <div class="form-group">
          <label for="name">Name:</label>
          <input type="name" class="form-control" id="name" name="name" placeholder="Enter name">
        </div>
        <div class="form-group">
          <label for="name">Select Event:</label>
          <select name="event1">
            <% for(var i=0;i<events.length;i++){%>
            <option value="<%=events[i].name%>"><%=events[i].name%></option>
            <% } %>
          </select>
        </div>
        <button type="submit" class="btn btn-dafault">Register</button>
      </form>
    </div>
  </body>
